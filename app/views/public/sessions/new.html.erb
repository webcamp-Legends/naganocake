<div class="container">
  <div class="mb-5 mt-5">
    <h3>ログイン</h3>
  </div>
  
  <h5>会員の方はこちらからログイン</h5>
  
  <%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="row ml-5 mb-4 p">
    <div class="col-7">
      <table class="table table-borderless">
        <tr>
          <td>
            <%= f.label :email,"メールアドレス" %>
          </td>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'sample@example.com',class: 'col-12 mx-0 pl-1' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :password,"パスワード" %>
          </td>
          <td>
            <%= f.password_field :password, autocomplete: "current-password",class: 'col-12 mx-0 pl-1' %>
          </td>
        </tr>
        <tr>
          <td>
          </td>
          <td class="actions">
            <%= f.submit "ログイン",class: 'btn btn-outline-success' %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>

  <h5>会員登録がお済みでない方</h5>
  
  <div class="row ml-5 pl-5 mt-4">
    <div class="col-7">
      <p><%= render "public/shared/links" %>から新規登録を行ってください</p>
    </div>
  </div>
  
</div>

