<div class ="container mt-5">
  <div class ="row align-items-end">
    <h3 >商品一覧</h3><p>　(全<%= @items.count %>件)</p>
  </div>
      <div class ="row ms-auto">

        <% @items.each do |item| %>
          <table class = "col-3 pl-15">
            <tr>
              <td>
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.image,size: "200x200" %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to item.name,item_path(item.id), class: "text-dark" %>
              </td>
            </tr>
            <tr>
              <td>
                ¥<%= link_to (item.price* 1.08).round.to_s(:delimited),item_path(item.id), class: "text-dark" %>
              </td>
            </tr>
          </table>
        <% end %>
      </div>

        <%= paginate @items %>

</div>