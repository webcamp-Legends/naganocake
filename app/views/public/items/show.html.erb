<div class ="container-fluid d-flex mt-5 pt-5">
  <div class ="row col-12 mt-5">
    <div class ="col-3 ml-4">
      <%= render "public/items/genre" %>
    </div>
      <div class="col-6 offset-1 d-flex shadow-lg px-4 py-4">
        <table>
            <tr><td><%= image_tag @item.image,size: "400x400" %></td></tr>
             <table class ="table table-sm table-borderless ml-5">
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr><td><h5><%= @item.name %></h5></td></tr>
                <tr class ="mt-0 pt-0"><td><%= @item.introduction %></td></tr>
                <tr><td><h5>¥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</h5></td></tr>
                <tr><td>
                  <%= form_with model: @cart_item,method: :post,multipart: true do |f| %>
                    <%=f.hidden_field :name, :value =>@item.name %>
                    <%=f.hidden_field :item_id, :value =>@item.id %>
                    <!--ログインしていない場合-->
                    <% unless current_customer.present? %>
                    <% else %>
                      <%=f.hidden_field :customer_id, :value =>current_customer.id%>
                    <%=f.hidden_field :image, :value =>@item.image %>
                    <%= f.select :amount, *[1..9] %>
                    <%= f.submit "カートに追加" ,class: "btn btn-sm btn-outline-primary"%>
                    <% end %>
                  <% end %>
                </td></tr>
              </table>
        </table>
      </div>
    </div>
</div>