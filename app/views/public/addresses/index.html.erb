<%= form_with model: @address,url: addresses_path do |f| %>
郵便番号
<%= f.text_field :postcode %>
住所
<%= f.text_field :address %>
名前
<%= f.text_field :name %>
<%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>

<table class='table table-inverse'>
　<thead>
    <tr class="table-primary">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |f| %>
      <tr>
        <td><%= f.postcode %></td>
        <td><%= f.address %></td>
        <td><%= f.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(f), class: 'btn btn-success' %>
          <%= link_to '消去する', address_path(f), class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

