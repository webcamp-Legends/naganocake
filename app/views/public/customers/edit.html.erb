<%= form_with model: @customer, url: customer_registration_path do |f| %>
<div class="container">
  <div class="mb-4 mt-5">
    <h3>会員情報編集</h3>
  </div>
  <div class ="row col-12">
    <table class="table col-8 table-borderless mb-4">
      <tr>
        <td class="table-dark">氏名</td>
        <td class ="pl-3">
          <%= f.text_field :last_name, autofocus: true, placeholder: '令和' %>
          <%= f.text_field :first_name,placeholder: '道子' %>
        </td>
      </tr>
      <tr>
        <td class="table-dark">フリガナ</td>
        <td class ="pl-3">
          <%= f.text_field :last_name_kana,placeholder: 'レイワ' %>
          <%= f.text_field :first_name_kana,placeholder: 'ミチコ' %>
        </td>
      </tr>
      <tr>
        <td class="table-dark"><%= f.label :post_code,"郵便番号" %></td>
        <td class ="pl-3"><%= f.text_field :post_code,placeholder: '0000000' %></td>
      </tr>
      <tr>
        <td class="table-dark"><%= f.label :address,"住所(ハイフンなし)" %></td>
        <td class ="pl-3"><%= f.text_field :address, :size=>"46" ,placeholder: '東京都渋谷代々木神園町0-0'%></td>
      </tr>
      <tr>
        <td class="table-dark"><%= f.label :phone_number,"電話番号(ハイフンなし)" %></td>
        <td class ="pl-3"><%= f.text_field :phone_number,placeholder: '00000000000' %></td>
      </tr>
      <tr>
        <td class="table-dark"><%= f.label :email,"メールアドレス" %></td>
        <td class ="pl-3"><%= f.email_field :email, autocomplete: "email",placeholder: 'sample@example.com' %></td>
      </tr>
    </table>
  </div>
  <%= f.submit "編集内容を保存",class: 'btn btn-outline-success' %>
  <%= link_to "退会する", customers_unsubscribe_path,class: 'btn btn-outline-danger' %>
  <% end %>
</div>