<div class="container">
  <div class="row">
    <div class="col-3  my-5">
      <h4><span style="background-color:#DDDDDD;">ショッピングカート</span></h4>
    </div>
    <div class="col-2 my-5 d-flex pull-right offset-7">
      <%=link_to "カートを空にする",cart_items_destroy_all_path,class:"btn btn-danger" %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <table class="table border border-0">
        <thead>
          <th>商品名</th>
          <th>単価(税込み)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <td><%=image_tag cart_item.item.image,size:"100x100" %><%=cart_item.item.name %></td>
          <td><%=cart_item.item.add_tax_price.floor%></td>
          <td><%=form_with model: cart_item,url: cart_item_path(cart_item),method: :patch do |f| %>
                <%=f.number_field :amount,min:1, max: 9,id:"amount" %>
                <%=f.submit "編集",class:"btn btn-success" %>
                <% end %>
          </td>
          <td><%=cart_item.subtotal%></td>
          <td><%=link_to "削除する",cart_item_path(cart_item), method: :delete,class:"btn btn-danger"%></td>
            <% @total_payment+= cart_item.subtotal %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-between">
    <div class="col-4">
      <%=link_to "買い物を続ける", items_path,class:"btn btn-primary ml-5 " %>
    </div>
    <div class="col-4">
      <table class="table table-bordered table-border-dark">
        <tr>
          <th>合計金額</th>
          <th><%= @total_payment %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-2 mx-auto mt-3"><%=link_to "情報入力に進む",new_order_path,class:"btn btn-success"%></div>
  </div>
</div>

  



