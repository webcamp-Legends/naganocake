<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <span class="bg-secondary ">ショッピングカート</span><%=link_to "カートを空にする",cart_items_destroy_all_path,class:"btn btn-danger" %>
        <table class="table">
          <thead>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </thead>
        <% @cart_items.each do |cart_item| %>
          <tbody>
            <td><%=cart_item.item.name %></td>
            <td><%=cart_item.item.add_tax_price.floor%></td>
            <td><%= cart_item.amount%></td>
            <td><%=cart_item.subtotal%></td>
            <td><%=link_to "削除する",cart_item_path(cart_item), method: :delete,class:"btn btn-danger"%></td>
            <% @total_payment+= cart_item.subtotal %>
          </tbody>
        <% end %>
        </table>
        <div>
          <%=link_to "買い物を続ける", items_path,class:"btn btn-primary" %>
          合計金額<%= @total_payment %>
        </div>
     <%=link_to "情報入力に進む",new_order_path,class:"btn btn-success"%>
    </div>
  </div>
</div>


