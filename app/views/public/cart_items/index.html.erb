<% if current_customer.cart_items.count==0 %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-12 mx-2 mx-sm-auto rounded py-5 my-5">
        <h2>カート内に商品がありません</h2>
      </div>
    </div>
  </div>

<% else %>

<div class="container">
  <div class="row">
    <div class="col-3  my-5">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col-2 my-5 d-flex pull-right offset-7">
      <%= link_to "カートを空にする",cart_items_destroy_all_path,class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <table class="table table-bordered">
        <thead class="table-dark">
          <th class="col-3">商品名</th>
          <th class="col-1">単価(税込み)</th>
          <th class="col-1">数量</th>
          <th class="col-1">小計</th>
          <th class="col-1"></th>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <td><%=image_tag cart_item.item.image,size:"50x50" %><span class= "px-1"><%=cart_item.item.name %></span></td>
          <td class= "align-middle"><%=cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <td class= "align-middle"><%=form_with model: cart_item,url: cart_item_path(cart_item),method: :patch do |f| %>
                <%=f.number_field :amount,min:1, max: 9,id:"amount" %>
                <%=f.submit "編集",class: "btn btn-sm btn-outline-success" %>
                <% end %>
          </td>
          <td class= "align-middle"><%=cart_item.subtotal.to_s(:delimited) %></td>
          <td class= "align-middle"><%=link_to "削除する",cart_item_path(cart_item), method: :delete,class: "btn btn-sm btn-outline-danger"%></td>
            <% @total_payment+= cart_item.subtotal %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-between mt-5 mb-2">
    <div class="col-4">
      <%=link_to "買い物を続ける", root_path,class:"btn btn-outline-primary ml-5 " %>
    </div>
    <div class="col-3">
      <table class="table table-bordered ">
        <tr>
          <th class="table-dark">合計金額</th>
          <th><%= @total_payment.to_s(:delimited)  %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-2 mx-auto mt-5"><%=link_to "情報入力に進む",new_order_path,class:"btn btn-outline-primary"%></div>
  </div>
</div>
<% end %>
