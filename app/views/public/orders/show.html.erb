<div class="container">
  <div class="row">
    <div class="col-6 pl-5 ml-5 my-5">
      <h3 mx-auto>注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <h6>注文情報</h6>
      <!--注文情報テーブル-->
      <table class="table table-bordered">
        <tr>
          <td>注文日</td>
          <td><%=@order.created_at %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>〒<%=@order.post_code %><br><%=@order.address %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%=@order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>
            ステータス
          </td>
          <td>
            <%=@order.order_status_i18n %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-6">
      <h6>請求情報</h6>
      <!--請求情報テーブル-->
      <table class="table table-bordered">
        <tr>
          <td>
            商品合計
          </td>
          <td>
            <%=@order.total_payment.to_s(:delimited)%>
          </td>       
        </tr>
        <tr>
          <td>配送料</td>
          <td><%=@order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>
            ご請求額
          </th>
          <td>
            <% total_price=@order.total_payment+@order.shipping_cost %>
            <%= total_price.to_s(:delimited)%>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h6>注文内容</h6>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <td>商品</td>
            <td>単価　(税込)</td>
          <td>個数</td>
          <td>小計</td>
        </thead>
       <% @order_details.each do |order_detail| %>
       <tr>
         <td><%= order_detail.item.name%></td>
         <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
         <td><%= order_detail.amount %></td>
         <% total_price= order_detail.amount * order_detail.item.add_tax_price %>
         <td><%= total_price.to_s(:delimited) %> </td
       </tr>
       <% end %>
      </table>
    </div>
  </div>
 </div>
 
 
