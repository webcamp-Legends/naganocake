<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<table class="table table-sm table-borderless">
  <tr>
  <td>氏名</td>
  <td><%= f.label :last_name,"(姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
  </td>
  <td><%= f.label :first_name,"(名)" %>
        <%= f.text_field :first_name %></td>
  </tr>
  <tr>
  <td>フリガナ</td>
  <td>
    <%= f.label :last_name_kana,"(セイ)" %>
    <%= f.text_field :last_name_kana %>
  </td>
  <td>
    <%= f.label :first_name_kana,"(メイ)" %>
    <%= f.text_field :first_name_kana %>
  </td>
  <tr>
    <td><%= f.label :email,"メールアドレス" %></td>
    <td><%= f.email_field :email, autocomplete: "email" %></td>
  </tr> 
  <tr>
    <td><%= f.label :post_code,"郵便番号" %>
    </td>
    <td><%= f.text_field :post_code %></td>
  </tr>
  <tr>
    <td><%= f.label :address,"住所(ハイフンなし)" %></td>
    <td><%= f.text_field :address %></td>
  </tr> 
  <tr>
    <td><%= f.label :phone_number,"電話番号(ハイフンなし)" %></td>
    <td><%= f.text_field :phone_number %></td>
  </tr> 
  <tr>
    <td><%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
   (<%= @minimum_password_length %> 文字以上)
    <% end %></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr> 
  <tr>
    <td><%= f.label :password_confirmation,"パスワード(確認用)" %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
  <tr>
    <td>
    </td>
  <td class="actions">
    <%= f.submit "新規会員登録",class: 'btn btn-success' %>
  </td>
  </tr>
</table>
<% end %>
