<div class="container">
  <div class="row d-flex mx-auto">
    <div class="col">

      <h3 class = "my-4">商品新規登録</h3>
      <%= form_with model: @item,url: admin_items_path,method: :post do |f| %>
      <table class ="table-sm">
        <tr>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :name,"商品名" %> <%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :introduction,"商品説明" %> <%= f.text_field :introduction %></td>
        </tr>
        <tr>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %><br></td>
        </tr>
        <tr>
          <td><%= f.label :price,"税抜き価格" %> <%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td><%= f.radio_button :is_active, :true, checked: true %> <%= f.label :is_active_true,"販売中" %></td>
        </tr>
        <tr>
          <td><%= f.radio_button :is_active, :false %> <%= f.label :is_active_false, "販売停止中" %></td>
        </tr>
      </table>
      <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
</div>