<div class="container">

  <h3>商品詳細</h3>

  <div class="row">

      <div class="col-lg-3">
        <%= image_tag @item.image,size: "200x200" %><br>
      </div>

      <div class="col">
        <table>
          <body>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格<br>(税抜き価格)</td>
              <td><%= @item.price %>(<%= @item.add_tax_price.to_s(:delimited) %>)円</td>
            </tr>
            <tr>
              <td>販売ステータス　</td>
              <td><% if @item.is_active == true %>
              <p class= "text-success my-auto">
                <%= @item.is_active_check %>
              </p>
            <% else %>
              <p class= "text-black-50 my-auto">
                <%= @item.is_active_check %>
              </p>
            <% end %></td>
            </tr>

          </body>

        </table>

        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %>

      </div>

  </div>
</div>