<div class="container">
  <div class="row">
    <div class="col">

      <h3>商品編集</h3>

      <%= form_with model: @item, url: admin_item_path(@item.id),method: :patch do |f| %>

        <%= f.file_field :image, accept: "image/*" %><br>

        <%= f.label      :name,"商品名" %>
        <%= f.text_field :name %><br>

        <%= f.label      :introduction,"商品説明" %>
        <%= f.text_field :introduction %><br>

        <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %><br>

        <%= f.label      :price,"税抜き価格" %>
        <%= f.text_field :price %>円<br>

        <%= f.radio_button :is_active, :true, checked: true %>
        <%= f.label        :is_active,"販売中" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label        :is_active, "販売停止中" %>

        <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>

      <% end %>
    </div>
  </div>
</div>