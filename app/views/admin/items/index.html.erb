<div class ="container mt-3">
  <div class ="row d-flex justify-content-between mb-3">
    <h3>商品一覧</h3>
      <%= link_to "商品追加",new_admin_item_path,class: "text-dark" %>
    </div>
  <div class ="row">
    <table class = "table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to item.name,admin_item_path(item.id), class: "text-dark" %>
          </td>
          <td>
            ¥<%= item.price %>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
            <% if item.is_active == true %>
              <p class= "text-success my-auto">
                <%= item.is_active_check %>
              </p>
            <% else %>
              <p class= "text-black-50 my-auto">
                <%= item.is_active_check %>
              </p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @items %>
</div>
