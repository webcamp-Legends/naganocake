<div class="container">
  <div class="row col-12 px-5 ml-5">
    <div class="col-md-6 col-sm-12 rounded ml-5 px-5 my-4">
      <h3>注文履歴一覧</h3>
    </div>
  </div>

  <div class="row col-12 px-0">

      <table class= "table">
        <tr>
          <td class= "col-3 px-0 py-2">購入時</td>
          <td class= "col-3 px-0 py-2">購入者</td>
          <td class= "col-3 px-0 py-2">注文個数</td>
          <td class= "col-3 px-0 py-2">注文ステータス</td>
        </tr>

        <% @orders.each do |order| %>
          <tr>
            <td class = "align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td class = "align-middle"><br><%= order.name %></td>
            <td class = "align-middle">
              <% order.order_details.each do |item| %>
            		<%= item.amount %>
            	<% end %>
            </td>
            <td class = "align-middle"><%= order.order_status_i18n %></td>
        <% end %>
      </table>

    </div>
  </div>
</div>