<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-12 my-5">
      <h3>注文履歴一覧</h3>
    </div>
  </div>

  <div class="row col-12 px-0">

      <table class= "table">
        <tr>
          <td class= "col-3 px-0 py-2 pl-1 table-dark">購入時</td>
          <td class= "col-3 px-0 py-2 pl-1 table-dark">購入者</td>
          <td class= "col-3 px-0 py-2 pl-1 table-dark">注文個数</td>
          <td class= "col-3 px-0 py-2 pl-1 table-dark">注文ステータス</td>
        </tr>

        <% @orders.each do |order| %>
          <tr>

            <td class = "align-middle">
              <%=link_to admin_order_path order do %>
              <%= order.created_at.strftime('%Y/%m/%d') %>
              <% end %>
            </td>
            <td class = "align-middle"><%= order.name %></td>

            <td class = "align-middle">
              <% @amount = 0 %>
              <% order.order_details.each do |item| %>
                <% (@amount += item.amount).to_s %>
            	<% end %>
          		<%= @amount %>
            </td>
            <td class = "align-middle"><%= order.order_status_i18n %></td>
        <% end %>
      </table>

    </div>
  </div>
</div>