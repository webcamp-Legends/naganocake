<div class="container">
  <div class = "row">
    <div class = "col-lg-5">
      <h3 class ="my-5">ジャンル一覧・追加</h3>

        <%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
          <%= f.label :name,"ジャンル名" %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class: "btn btn-sm btn-outline-success" %>
        <% end %>

        <table class= "table mt-5">
          <thead>
            <th class ="table-dark">ジャンル</th>
            <th class ="table-dark"></th>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する",edit_admin_genre_path(genre.id), class: "btn btn-sm btn-outline-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>