<div class="container">
  <div class="mb-5 mt-5">
    <h3>会員一覧</h3>
  </div>
  <table class = "table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer), class: "text-dark" do %>
          <%= customer.last_name %><%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted == false %>
            <p class="text-success">有効</p>
          <% else %>
            <p class=text-secondary>退会</p>
          <% end %>
        </td>
      <% end %>
      </tr>
    </tbody>
  </table>
<%= paginate @customers %>
</div>